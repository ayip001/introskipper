{
  "manifest_version": 2,

  "name": "Nointro",
  "description": "I need no introduction",
  "version": "0.1",

  "options_page" : "options.html",

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "https://ajax.googleapis.com/",
    "https://*/",
    "http://*/"
  ]
}
